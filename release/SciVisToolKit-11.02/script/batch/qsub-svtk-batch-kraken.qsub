#!/bin/bash

cd $PBS_O_WORKDIR

date
echo "Starting ParaView..."
echo "MPI_TYPE_MAX=$MPI_TYPE_MAX"
echo "MPI_GROUP_MAX=$MPI_GROUP_MAX"
echo "LD_LIBRARY_PATH=$LD_LIBRARY_PATH"
echo "PATH=$PATH"
echo "PV_PATH=$PV_PATH"
echo "PV_NCPUS=$PV_NCPUS"
echo "PV_EXE=$PV_EXE"
echo "CONFIG_FILE=$CONFIG_FILE"
echo "BOV_FILE=$BOV_FILE"
echo "OUTPUT_PATH=$OUTPUT_PATH"
echo "START_TIME=$START_TIME"
echo "END_TIME=$END_TIME"

aprun -n $PV_NCPUS $PV_EXE $CONFIG_FILE $BOV_FILE $OUTPUT_PATH $START_TIME $END_TIME

